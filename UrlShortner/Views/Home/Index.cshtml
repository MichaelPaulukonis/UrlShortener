@model  UrlShortener.Models.LocationModel

<div class="jumbotron">
    <h1>Url Shortener</h1>
    <p class="lead">Shorten URLs the simple and naive way!</p>
    @*TODO: link to deletion page*@
    @*TODO: link to listing page*@
    @using (Html.BeginForm("Shortened", "Home"))
    {
        <p>
            @Html.LabelFor(m => m.FullURI)
            @Html.TextBoxFor(m => m.FullURI, new { id = "FullURL", placeholdertext = "URL to be shortened" })
        </p>
        <p>
            @Html.LabelFor(m => m.ConfirmationCode)
            @Html.TextBoxFor(m => m.ConfirmationCode, new { placeholdertext = "optional code to delete short URL" })
        </p>
        <input type="submit" value="ShortenIt!" class="btn btn-primary btn-lg" />
    }
</div>
